# 环境变量配置文件示例
# 复制此文件为 .env 并根据实际环境修改配置

# 数据库配置
POSTGRES_USER=postgres
POSTGRES_PASSWORD=password
POSTGRES_DB=plant_disease
DATABASE_URL=postgresql://postgres:password@postgres:5432/plant_disease

# Redis配置
REDIS_URL=redis://redis:6379/0
CELERY_BROKER_URL=redis://redis:6379/1
CELERY_RESULT_BACKEND=redis://redis:6379/2

# JWT配置
JWT_SECRET_KEY=your-secret-key-here
JWT_ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# 腾讯云COS配置 (可选)
COS_SECRET_ID=your-cos-secret-id
COS_SECRET_KEY=your-cos-secret-key
COS_REGION=ap-beijing
COS_BUCKET=your-bucket-name

# 模型配置
MODEL_PATH=/app/models

# 服务端口配置
API_GATEWAY_PORT=8000
USER_SERVICE_PORT=8001
TASK_SERVICE_PORT=8002
MODEL_SERVICE_PORT=8003
CACHE_SERVICE_PORT=8006

# 服务间调用地址（docker-compose 网络内）
USER_SERVICE_URL=http://user-service:8001
TASK_SERVICE_URL=http://task-service:8002
MODEL_SERVICE_URL=http://model-service:8003
CACHE_SERVICE_URL=http://cache-service:8006

# 前端配置
NEXT_PUBLIC_API_BASE_URL=/api
NEXT_PUBLIC_API_URL=http://localhost:8000

# 日志级别
LOG_LEVEL=INFO

# 监控配置
PROMETHEUS_PORT=9090
GRAFANA_PORT=3001
GRAFANA_ADMIN_PASSWORD=admin

# 邮件配置 (可选)
SMTP_HOST=smtp.example.com
SMTP_PORT=587
SMTP_USERNAME=your-email@example.com
SMTP_PASSWORD=your-email-password
SMTP_FROM_EMAIL=noreply@example.com

# 文件上传配置
# MAX_UPLOAD_SIZE: 10MB in bytes
MAX_UPLOAD_SIZE=10485760
ALLOWED_FILE_TYPES=jpg,jpeg,png,gif,bmp,tiff

# 其他配置
DEBUG=false
ENVIRONMENT=production
